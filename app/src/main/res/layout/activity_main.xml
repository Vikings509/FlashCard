<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:title="FlashCard App" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Flash Card App ..."
        android:paddingTop="30dp" android:paddingLeft="10dp" android:textSize="20sp" android:textColor="#ffffff"/>

<!--This part of code is for the question -->
    <TextView
        android:id="@+id/flashcard_question1"
        android:layout_width="match_parent"
        android:layout_height="200dp" android:layout_below="@id/toolbar"
        android:gravity="center" android:layout_margin="5dp"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        android:textColor="#4C4D4F"
        android:padding="3dp"
        android:background="@drawable/card_background"
        android:elevation="50dp"
        android:layout_marginBottom="20dp"/>
    <!--- This part of code is for the answer. -->
    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_below="@id/toolbar"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:textColor="#4C4D4F"
        android:background="#F2EC18"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/flashcard_q1_choice1"
        style="@style/FlashcardChoice"
        android:layout_below="@+id/flashcard_question1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textSize="40sp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
        android:textColor="#3737D3"
        android:background="#FED9B7"/>
    <TextView
        android:id="@+id/flashcard_q1_choice2"
        style="@style/FlashcardChoice"
        android:layout_below="@+id/flashcard_q1_choice1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
        android:text="George H. W. Bush"
        android:textSize="40sp"
        android:textColor="#3737D3"
        android:background="#FED9B7"/>
    <TextView
        android:id="@+id/flashcard_q1_choice3"
        style="@style/FlashcardChoice"

        android:layout_below="@+id/flashcard_q1_choice2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:textColor="#3737D3"
        android:background="#FED9B7"/>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="64dp"
        android:layout_height="64dp" android:layout_alignParentBottom="true" android:layout_marginBottom="100dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="-150dp" android:clickable="true"
        android:contentDescription="Toggle Button"
        android:src="@drawable/eye_lined_off" />

    <ImageView
        android:id="@+id/plus_button"
        android:layout_width="50dp"
        android:layout_height="50dp" android:clickable="true"
        android:src="@drawable/plus_square_on" android:layout_margin="30dp"
        android:layout_alignParentBottom="true" android:layout_alignParentRight="true">
    </ImageView>


</RelativeLayout>
