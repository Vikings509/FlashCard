<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:text="Flash Card App"
        android:textColor="#ffffff"
        android:textSize="20sp"/>
<!---This part of code is for the question. -->
    <TextView
        android:id="@+id/flashcard_question1"
        android:layout_below="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        android:textColor="#4C4D4F"
        android:padding="3dp"
        android:background="@drawable/card_background"
        android:elevation="50dp"
        android:layout_marginBottom="20dp"/>
    <!--- This part of code is for the answer. -->
    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:textColor="#4C4D4F"
        android:background="#EDED6B"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/flashcard_q1_choice1"
        android:layout_below="@+id/flashcard_question1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textSize="40sp"
        android:textColor="#3737D3"
        android:background="#FED9B7"/>
    <TextView
        android:id="@+id/flashcard_q1_choice2"
        android:layout_below="@+id/flashcard_q1_choice1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textSize="40sp"
        android:textColor="#3737D3"
        android:background="#FED9B7"/>
    <TextView
        android:id="@+id/flashcard_q1_choice3"
        android:layout_below="@+id/flashcard_q1_choice2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:textColor="#3737D3"
        android:background="#FED9B7"/>
    <LinearLayout
        android:layout_width="match_parent" android:layout_below="@id/flashcard_q1_choice3" android:gravity="center" android:layout_height="match_parent">
        <ImageView
           android:layout_gravity="bottom" android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/toggle_choices_visibility"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/bottom_sheet_behavior"
            android:src="@drawable/eye_lined_off" />
    </LinearLayout>

</RelativeLayout>
